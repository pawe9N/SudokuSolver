<Page x:Class="SudokuSolver.Pages.SolverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SudokuSolver.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SudokuSolver">

    <Grid>
        <Canvas Name="myCanvas" Background="White" Width="400" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left">

        </Canvas>
        <Button Name="SolveButton" Content="Solve Sudoku" Width="100" Height="50" Margin="0, 300, 0, 0" Click="SolveButton_Click"/>
        <Button Name="NewEmptySudokuButton" Content="New" Width="100" Height="50" Margin="500, 0, 0, 0" Click="NewEmptySudokuButton_Click"/>
        <Button Name="BackButtone" Content="Back to main page" Width="110" Height="50" Margin="0, 0, 500, 0" Click="BackButtone_Click"/>
        <TextBlock Name="ErrorText" Text="" Margin="20,0,0,400" Width="Auto" Height="40" Background="White" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red"/>
    </Grid>
</Page>
