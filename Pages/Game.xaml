<Page x:Class="SudokuSolver.Pages.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SudokuSolver">
 
    <Grid>
        <Border Margin="0, 300, 0, 0" Height="50" Width="100">
            <TextBlock Name="PointsText" Text="" Margin="10, 0, 0, 0" Width="100" Height="40" Background="White" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Border>
        
        <Canvas Name="myCanvas" Background="White" Width="400" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left"> 

        </Canvas>
        <Button Name="SolveButton" Content="Solve Sudoku" Width="100" Height="50" Margin="0, 300, 300, 0" Click="SolveButton_Click"/>
        <Button Name="CheckInputs" Content="Check" Width="100" Height="50" Margin="300, 300, 0, 0" Click="CheckInputs_Click"/>
        <Button Name="NextSudoku" Content="Next" Width="100" Height="50" Margin="500, 0, 0, 0" Click="NextSudoku_Click"/>
        <Button Name="BackButtone" Content="Back to main page" Width="110" Height="50" Margin="0, 0, 500, 0" Click="BackButtone_Click"/>
    </Grid>

</Page>
