<Page x:Class="SudokuSolver.Pages.ChooseDifficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SudokuSolver.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseDifficulty">

    <StackPanel>
        <Label Content="Choose difficulty level:"/>
        <Button Name="VeryEasyButton" Content="Very Easy" Click="VeryEasyButton_Click"/>
        <Button Name="EasyButton" Content="Easy" Click="EasyButton_Click"/>
        <Button Name="NormalButton" Content="Normal" Click="NormalButton_Click"/>
        <Button Name="HardButton" Content="Hard"  Click="HardButton_Click"/>
        <Button Name="VeryHardButton" Content="Very Hard"  Click="VeryHardButton_Click"/>
    </StackPanel>
</Page>
