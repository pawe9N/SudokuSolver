<Page x:Class="SudokuSolver.Pages.ChooseDifficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SudokuSolver.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseDifficulty">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Choose difficulty level:" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Name="VeryEasyButton" Content="Very Easy" Width="100" Height="30" Click="VeryEasyButton_Click"/>
        <Button Name="EasyButton" Content="Easy" Width="100" Height="30" Click="EasyButton_Click"/>
        <Button Name="NormalButton" Content="Normal" Width="100" Height="30" Click="NormalButton_Click"/>
        <Button Name="HardButton" Content="Hard" Width="100" Height="30" Click="HardButton_Click"/>
        <Button Name="VeryHardButton" Content="Very Hard" Width="100" Height="30" Click="VeryHardButton_Click"/>
    </StackPanel>
</Page>
